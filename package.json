{
    "name": "payvision-site",
    "version": "3.1.0",
    "description": "Source code for new payvision.com website",
    "main": "index.js",
    "scripts": {
        "clean": "rimraf ./_site ./dist/*",
        "build:dev": "npm run clean && npm run webpack:prod && npm run jekyll:build:dev",
        "build:acc": "npm run clean && npm run webpack:prod && npm run jekyll:build:acc",
        "build:prod": "npm run clean && npm run webpack:prod && npm run jekyll:build:prod",
        "jekyll:build:dev": "JEKYLL_ENV=development bundle exec jekyll build --config _config.yml",
        "jekyll:build:acc": "JEKYLL_ENV=acceptance bundle exec jekyll build --config _config.yml,_config_acc.yml",
        "jekyll:build:prod": "JEKYLL_ENV=production bundle exec jekyll build --config _config.yml,_config_prod.yml",
        "webpack:dev": "cross-env NODE_ENV=development webpack --progress --hide-modules",
        "webpack:prod": "cross-env NODE_ENV=production webpack --progress --hide-modules",
        "serve": "bundle exec jekyll serve --config _config.yml --livereload --profile",
        "start": "npm run clean && cross-env NODE_ENV=development webpack --watch --progress",
        "release": "standard-version",
        "lint:js": "eslint \"./**/*.js\"",
        "fix:js": "eslint \"./**/*.js\" --fix",
        "lint:styles": "stylelint \"./**/*.{vue,scss}\"",
        "fix:styles": "stylelint \"./**/*.{vue,scss}\" --fix",
        "lint": "npm run lint:js && npm run lint:styles",
        "lint:fix": "npm run fix:js && npm run fix:styles"
    },
    "keywords": [
        "payvision",
        "website",
        "jekyll",
        "webpack",
        "2019"
    ],
    "author": "Carlos Orbea",
    "license": "ISC",
    "dependencies": {
        "axios": "^0.19.0",
        "babel-polyfill": "^6.26.0",
        "core-js": "^3.7.0",
        "css-vars-ponyfill": "^1.17.2",
        "lodash.debounce": "^4.0.8",
        "svg4everybody": "^2.1.9",
        "tocca": "^2.0.4",
        "vuelidate": "^0.7.4"
    },
    "devDependencies": {
        "@babel/core": "^7.6.2",
        "@babel/preset-env": "^7.6.2",
        "@commitlint/cli": "^8.2.0",
        "@commitlint/config-conventional": "^8.2.0",
        "autoprefixer": "^9.6.1",
        "babel-loader": "^8.0.6",
        "clean-webpack-plugin": "^1.0.1",
        "compression-webpack-plugin": "^3.1.0",
        "cross-env": "^5.2.1",
        "css-loader": "^2.1.1",
        "cssnano": "^4.1.10",
        "eslint": "^5.16.0",
        "favicons-webpack-plugin": "^3.0.0",
        "file-loader": "^3.0.1",
        "html-webpack-plugin": "^3.2.0",
        "husky": "^3.0.5",
        "imports-loader": "^0.8.0",
        "lint-staged": "^9.4.0",
        "mini-css-extract-plugin": "^0.5.0",
        "node-sass": "^4.13.1",
        "postcss-import": "^12.0.1",
        "postcss-loader": "^3.0.0",
        "postcss-scss": "^2.0.0",
        "rimraf": "^2.7.1",
        "sass-loader": "^7.3.1",
        "standard-version": "^7.0.0",
        "style-loader": "^0.23.1",
        "stylelint": "^10.1.0",
        "stylelint-config-standard": "^19.0.0",
        "stylelint-scss": "^3.11.1",
        "vue-loader": "^15.7.1",
        "vue-style-loader": "^4.1.2",
        "vue-template-compiler": "^2.6.10",
        "webpack": "^4.41.0",
        "webpack-cli": "^3.3.9"
    }
}
